<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true">
	
	<fx:Script>
		<![CDATA[
			import valueObjects.Template;
		]]>
	</fx:Script>
	<s:HGroup height="24" verticalAlign="middle" paddingBottom="4" paddingLeft="4" paddingRight="4" paddingTop="4" gap="8">
		<s:Image source="{'http://flash.musiconegivc.com/planner_db/template_' + Template(data).id + '.png'}"/>
		<s:Label text="{Template(data).name}"/>	
	</s:HGroup>
	
	<s:doubleClick>PlannerAPI.onTemplatesListDoubleClick(data)</s:doubleClick>
	<s:doubleClickEnabled>true</s:doubleClickEnabled>
	
</s:ItemRenderer>
