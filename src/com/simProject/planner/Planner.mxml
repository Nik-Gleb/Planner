<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:products="services.products.*"
			   minWidth="640" minHeight="480"
			   creationComplete="application_creationCompleteHandler(event)"
			   pageTitle="Planner" viewSourceURL="srcview/index.html">
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			
			protected function list_creationCompleteHandler(event:FlexEvent):void
			{
				getDataResult.token = products.getData();
			}
			
			
			protected function application_creationCompleteHandler(event:FlexEvent):void
			{
				getDataResult2.token = products.getData();
			}
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<s:CallResponder id="getDataResult"/>
		<products:Products id="products"
						   fault="Alert.show(event.fault.faultString + '\n' + event.fault.faultDetail)"
						   showBusyCursor="true"/>
		<s:CallResponder id="getDataResult2"/>
		<!-- Разместить невизуальные элементы (например, службы или объекты значений) -->
	</fx:Declarations>
	<s:controlBarContent>
		<s:HGroup id="titlePanel"
				  width="163" height="25"
				  horizontalAlign="center" verticalAlign="middle">
			<s:Button id="backButton" label="Назад"
					  click="PlannerAPI.onBackButtonClick()" enabled="false"/>
			<s:Button id="forwardButton"
					  label="Вперёд"
					  click="PlannerAPI.onForwardButtonClick()"/>
		</s:HGroup>
	</s:controlBarContent>
	<s:Panel id="shelf_sizes_panel" width="620" height="419" horizontalCenter="0"
			 title="Настройка размера полки" verticalCenter="0">
	</s:Panel>
	<s:Panel id="constructor_panel" visible="false" width="620" height="419"
			 horizontalCenter="0" title="Конструктор стенки" verticalCenter="0">
	</s:Panel>
	<s:Panel id="report_panel" visible="false" width="620" height="419"
			 horizontalCenter="0" title="Отчёт" verticalCenter="0">
	</s:Panel>
</s:Application>

