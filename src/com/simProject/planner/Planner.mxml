<?xml version="1.0" encoding="utf-8"?>
<s:Application xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:products="services.products.*"
			   xmlns:dets="services.dets.*"
			   xmlns:templates="services.templates.*"
			   minWidth="640" minHeight="480"
			   applicationComplete="{PlannerAPI.initialize()}"
			   pageTitle="Planner" viewSourceURL="srcview/index.html">
	<fx:Script>
	</fx:Script>
	<fx:Declarations>
		<products:Products id="products"
						   showBusyCursor="true"/>		
		<dets:Dets id="dets"
				   showBusyCursor="true"/>
		<templates:TemplatesService id="templatesService"
									showBusyCursor="true"/>
	</fx:Declarations>
	<s:controlBarContent>
		<s:HGroup id="titlePanel" width="163" height="25"
				  horizontalAlign="center" verticalAlign="middle">
			<s:Button id="backButton" label="Назад"
					  click="PlannerAPI.onBackButtonClick()" enabled="false"/>
			<s:Button id="forwardButton"
					  label="Вперёд"
					  click="PlannerAPI.onForwardButtonClick()"/>
		</s:HGroup>
	</s:controlBarContent>
	<s:Panel id="shelf_sizes_panel" visible="false" width="620" height="419" horizontalCenter="0"
			 title="Настройка размера полки" verticalCenter="0">
	</s:Panel>
	<s:Panel id="constructor_panel" visible="true" width="620" height="419"
			 horizontalCenter="0" title="Конструктор стенки" verticalCenter="0">
		<s:List id="productsList" x="10" y="10" width="156" height="110"
				change="{PlannerAPI.onProductsListChanged()}"
				itemRenderer="com.simProject.planner.ProductItemListRenderer"
				labelField="name" verticalScrollPolicy="auto">
		</s:List>
		<s:List id="templatesList" x="10" y="130" width="157" height="110"
				change="{PlannerAPI.onTemplatesListChanged()}"
				itemRenderer="com.simProject.planner.TemplateItemListRenderer"
				labelField="name" verticalScrollPolicy="auto">
		</s:List>
		<s:RichText id="productInfo" x="174" y="10" width="267" height="110"/>
		<s:RichText id="templateInfo" x="174" y="128" width="267" height="112"/>
		<s:List id="resultList" x="449" y="10" width="159" height="230"
				itemRenderer="com.simProject.planner.ResultItemListRenderer"
				dataProvider="{PlannerAPI.resultProducts}"
				dragMoveEnabled="true"
				dragEnabled="true"
				dropEnabled="true"
				labelField="id">
		</s:List>
	</s:Panel>
	<s:Panel id="report_panel" visible="false" width="620" height="419"
			 horizontalCenter="0" title="Отчёт" verticalCenter="0">
	</s:Panel>
</s:Application>

